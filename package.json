  "license": "GPL-3.0",
  "author": {
    "name": "Oxen Project",
    "email": "team@oxen.io"
  },
  "scripts": {
    "clean": "rimraf .cache build",
    "lint:cpp": "cppcheck --std=c++20 -j8  src",
